/= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false&callback=initMap"
#contacts
  .row
    #contact_map.col-12
      %iframe{ src: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2560.9035519505596!2d14.416241616089819!3d50.069367879424725!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470b945fbdbb2a09%3A0xdb74c22c456e5f1c!2zVnnFoWVocmFkc2vDoSA0MjQvMTYsIDEyOCAwMCBQcmFoYSAyLU5vdsOpIE3Em3N0bw!5e0!3m2!1sen!2scz!4v1513863722990', width: "100%", frameborder:"0", style: "border:0", allowfullscreen: nil}
    #contact_form.col-12.col-lg-7.col-md-8.bg-white
      %h3.heading= t('contact_form.heading')
      = bootstrap_form_for(:contact) do |f|
        .row
          .col-12.col-sm-6= f.text_field(:name)
          .col-12.col-sm-6= f.text_field(:mail)
          .col-12= f.text_area(:message)
          .col-12
            = button_tag type: 'submit', class: 'btn btn-primary' do
              %i.fa.fa-paper-plane-o{'aria-hidden' => 'true', 'aria-label' => t('label_send')}
              = t('label_send')
    #contact_list.col-12.col-lg-5.col-md-4.bg-secondary.text-white
      .contact
        .label Volejte na:
        .value +420 778 527 170

      .contact
        .label Pište na:
        .value= EgovUtils::Settings['contact_mail'] || 'posta@msp.justice.cz'

      .contact
        .label Navštivte nás:
        .value Vyšehradská 16, 128 10, Praha 2

      .contact.social-networks
        = link_to 'https://facebook.com/ministerstvospravedlnosti/', class: 'text-white' do
          %i.fa.fa-facebook
        = link_to 'https://twitter.com/spravedlnostcz', class: 'text-white' do
          %i.fa.fa-twitter
        = link_to 'https://linkedin.com/company/ministerstvo-spravedlnosti-%C4%8Desk%C3%A9-republiky', class: 'text-white' do
          %i.fa.fa-linkedin
